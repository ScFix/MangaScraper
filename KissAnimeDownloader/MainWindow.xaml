<Window x:Class="KissAnimeDownloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KissAnimeDownloader"
        xmlns:v="clr-namespace:KissAnimeDownloader.Views"
        mc:Ignorable="d"
        xmlns:vm="clr-namespace:KissAnimeDownloader.ViewModel"
        xmlns:conv="clr-namespace:KissAnimeDownloader.Converter"
        Title="MainWindow"
        Height="350"
        Width="525">
    <d:DesignProperties.DataContext>
        <vm:MainViewModel />
    </d:DesignProperties.DataContext>
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Margin"
                    Value="0,5,5,0" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin"
                    Value="5" />
        </Style>
        <DataTemplate DataType="{x:Type vm:ChapterViewModel}">
            <v:ChapterLink />
        </DataTemplate>
        <conv:ObjectToVisibility x:Key="ObjToVis" />

        <Style TargetType="ListBoxItem">
            <Setter Property="HorizontalContentAlignment"
                    Value="Stretch" />
        </Style>
    </Window.Resources>
    <DockPanel>
        <Grid DockPanel.Dock="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Label Grid.Row="0"
                   Grid.Column="0">Folder Name:</Label>
            <TextBox Grid.Row="0"
                     Grid.Column="1"
                     Text="{Binding FolderName}" />

            <Label Grid.Row="1"
                   Grid.Column="0">Base Web Link</Label>
            <TextBox Grid.Row="1"
                     Grid.Column="1"
                     Text="{Binding WebBaseAddress}" />

            <Button Grid.Row="2"
                    Grid.Column="1"
                    Command="{Binding FindLinks}">Find Active Links</Button>
            <Button Grid.Row="2"
                    Grid.Column="0"
                    Visibility="{Binding ChapterLinks, Converter={StaticResource ObjToVis}}"
                    Command="{Binding ProcessLinks}">Process All</Button>
            <!--<TextBlock Text="{Binding WebLinksText}"></TextBlock>-->



        </Grid>
        <Button DockPanel.Dock="Bottom" Command="{Binding GenerateNames}">Generate Chapter Names</Button>

        <ListBox ItemsSource="{Binding ChapterLinks}"
                 ScrollViewer.CanContentScroll="True"></ListBox>
    </DockPanel>
</Window>
